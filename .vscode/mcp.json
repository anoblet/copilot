{
  "inputs": [
    {
      "type": "promptString",
      "id": "alpha_vantage_api_key",
      "description": "Alpha Vantage API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "context7_api_key",
      "description": "Context7 API Key",
      "password": true
    },
    {
      "type": "promptString",
      "id": "tavily_api_key",
      "description": "Tavily API Key",
      "password": true
    }
  ],
  "servers": {
    "alphavantage": {
      "command": "uvx",
      "args": [
        "av-mcp",
        "${input:alpha_vantage_api_key}"
      ]
    },
    "chroma": {
      "command": "uvx",
      "args": [
        "chroma-mcp",
        "--client-type",
        "persistent",
        "--data-dir",
        "${workspaceFolder}/.chroma"
      ]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    },
    "copilot-mcp": {
      "command": "node",
      "args": [
        "${workspaceFolder}/../packages/mcp/src/server/stdio.ts"
      ],
      "env": {
        "MCP_PORT": "4300",
        "MCP_USER_INPUT_TIMEOUT_MS": "600000"
      }
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${input:context7_api_key}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "X-MCP-Toolsets": "default,copilot_spaces"
      }
    },
    "markitdown": {
      "command": "uvx",
      "args": [
        "markitdown-mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "tavily": {
      "command": "npx",
      "args": [
        "-y",
        "tavily-mcp@latest"
      ],
      "env": {
        "TAVILY_API_KEY": "${input:tavily_api_key}"
      }
    },
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ]
    }
  }
}